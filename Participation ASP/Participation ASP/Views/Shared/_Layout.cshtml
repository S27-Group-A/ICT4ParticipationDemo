@using System.Diagnostics.Eventing.Reader
@using Participation_ASP.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ICT4Participation Web</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Participation", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Session["Account"] != null)
                    {
                        @Html.ActionLink("Kennismakinggesprek", "Index", "Meeting", new { area = "" }, new { @class = "navbar-brand" })
                        @Html.ActionLink("Hulpvragen", "Index", "Request", new { area = "" }, new { @class = "navbar-brand" })
                    }
                    @if (Session["Account"] != null)
                    {
                        if (((Account) Session["Account"]).IsAdmin)
                        {
                            @Html.ActionLink("Beheer", "Adminpanel", "Admin", new { area = "" }, new { @class = "navbar-brand" })
                        }
                    }

                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["Account"] != null)
                    {
                        Account account = (Account)Session["Account"];
                        @Html.ActionLink("Chat", "Room", "Chat", new { area = "" }, new { @class = "navbar-brand" })
                        @Html.ActionLink("Profile", "Index", "Profile", new { area = "" }, new { @class = "navbar-brand" })
                        @Html.ActionLink("Welcome " + account.Username + " (Logout)", "Logout", "Account", new { area = "" }, new { @class = "navbar-brand" })
                    }
                    else
                    {
                        @Html.ActionLink("Aanmelden", "Login", "Account", new { area = "" }, new { @class = "navbar-brand" })
                        @Html.ActionLink("Registreren", "Register", "Account", new { area = "" }, new { @class = "navbar-brand" })
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ParticipationWebApp</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>