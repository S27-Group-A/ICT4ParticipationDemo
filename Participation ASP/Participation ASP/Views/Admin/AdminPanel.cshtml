@using Participation_ASP.Models
@model Participation_ASP.Models.ViewModel


@{
    ViewBag.Title = "AdminPanel";
}

<h2>Beheer</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <h5>Accounts:</h5>
            <ul>
                @foreach (IAccount i in Model.GetAccountList())
                {

                    <li>@Html.ActionLink(i.Username, "AdminProfile", new { id = i.AccountId })</li>
                }
            </ul>

            <h5>Hulpvragen:</h5>
            <ul>
                @foreach (Request i in Model.GetRequestList())
                {
                    <li>@Html.ActionLink(i.Description, "AdminRequest", new { id = i.RequestId })</li>
                }
            </ul>
        </div>
    </div>
}
