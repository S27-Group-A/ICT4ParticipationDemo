@using Participation_ASP.Models
@model Request

@{
    ViewBag.Title = "AdminRequest";
}

<h2>Hulpvragen Beheer</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <h5>Hulpvraag:</h5>
            <ul>
                <li>@Html.Label("Opdrachtgever: " + @Model.Patient.Name)</li>
                <li>@Html.Label("Beschrijving: " + @Model.Description)</li>
                <li>@Html.Label("Locatie: " + @Model.Location)</li>
                <li>@Html.Label("Reistijd: " + @Model.Description)</li>
                <li>@Html.Label("Datum: van" + @Model.StartDate + " tot " + @Model.EndDate)</li>
                <li>@Html.Label("Urgentie:" + @Model.Urgency)</li>
                <li>@Html.Label("Hoeveelheid vrijwilligers:" + @Model.AmountOfVolunteers)</li>
                <li>@Html.Label("Soort voertuig: " + @Model.VehicleType.Description)</li>

                <li>@Html.Label("Vaardigheden:")
                    <ul>
                        @foreach (Skill s in @Model.Skills)
                        {
                            <li>@Html.Label(s.Description)</li>
                        }
                    </ul>
            </ul>

            @Html.ActionLink("Verwijder Hulpvraag", "DeleteRequest", new { Id = @Model.RequestId })
            <br>

            <h5>Reacties:</h5>
            <ul>
                @foreach (Response e in @Model.Responses)
                {
                    <li>@Html.ActionLink("Profiel Vrijwilliger", "AdminProfile", new { Id = e.Volunteer.AccountId })</li>
                    <li>@Html.Label(e.Description)</li>
                    <li>@Html.Label(e.ResponseDate.ToString())</li>
                }
            </ul>
        </div>
    </div>
}

