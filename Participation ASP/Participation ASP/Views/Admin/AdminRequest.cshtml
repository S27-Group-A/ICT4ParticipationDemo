@using Participation_ASP.Models
@model Request
@{
    ViewBag.Title = "AdminRequests";
}

<h2>Hulpvragen Beheer</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <div class="col-md-10">
                <h5>Hulpvragen</h5>
                <div class="col-md-10">
                    @Html.Label("Opdrachtgever: " + @Model.Patient.Name)
                    <br>
                    @Html.Label("Beschrijving: " + @Model.Description)
                    <br>
                    @Html.Label("Locatie: " + @Model.Location)
                    <br>
                    @Html.Label("Reistijd: " + @Model.Description)
                    <br>
                    @Html.Label("Datum: van" + @Model.StartDate + " tot " + @Model.EndDate)
                    <br>
                    @Html.Label("Urgentie:" + @Model.Urgency)
                    <br>
                    @Html.Label("Hoeveelheid vrijwilligers:" + @Model.AmountOfVolunteers)
                    <br>
                    @Html.Label("Soort voertuig: " + @Model.VehicleType.Description)
                    <br>

                    <div class="col-md-10">
                        @Html.Label("Vaardigheden: ")
                        @foreach (Skill s in @Model.Skills)
                        {
                            <ul>
                                <li>@Html.Label(s.Description)</li>
                            </ul>
                        }
                    </div>
                    <br>
                    <div class="col-md-10">
                        @Html.ActionLink("Verwijder Hulpvraag", "DeleteRequest", new { Id = @Model.RequestId })
                    </div>
                    <br>

                        
                    <div class="col-md-10">
                        @Html.Label("Antwoorden: ")
                        @foreach (Response e in @Model.Responses)
                        {
                            <div class="col-md-10">
                                @Html.ActionLink("Profiel Vrijwilliger", "AdminProfile", new { Id = e.Volunteer.AccountId })
                                @Html.Label(e.Description)
                                @Html.Label(e.ResponseDate.ToString())
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

