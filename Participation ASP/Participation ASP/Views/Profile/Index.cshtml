@using Participation_ASP.Models
@model Participation_ASP.Models.IAccount
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="jumbotron">
    <h2>@Model.Name</h2>
    <table style="border-spacing: 10px;">
        <tr>
            <td>
                <p>Gebruikersnaam: @Model.Username</p>
                <p>Email: @Model.Email</p>
                <p>Adres: @Model.Adress</p>
                <p>Telefoonnummer: @Model.Phone</p>
                <p>Locatie: @Model.Location</p>
            </td>
            <td style="padding: 50px; text-align: right;">
                @if (Model is Volunteer && !string.IsNullOrEmpty(((Volunteer)Model).Photo))
                {
                    <img src=@(((Volunteer) Model).Photo) width="300" height="300" />
                }
                else
                {
                    <img src="http://tinyurl.com/zbyn293" width="300" height="300" />
                }
            </td>
        </tr>
    </table>
</div>
@if (Model is Volunteer)
{
    {
        Volunteer volunteer = Model as Volunteer;
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Beschikbaarheid</h3>
            </div>
            <div class="panel-body">
                @if (volunteer.Availabilities != null)
                {
                    <div class="list-group">
                        @foreach (Availability a in volunteer.Availabilities)
                        {
                            <a class="list-group-item">
                                @a.Day - @a.TimeOfDay
                            </a>
                        }
                        @if (Session["ErrorAvail"] != string.Empty)
                        {
                            <a class="list-group-item active">
                                U heeft deze al toegevoegd.
                            </a>
                        }
                    </div>
                }
                @using (Html.BeginForm("AddAvailabilities", "Profile"))
                {
                    <select id="dag" class="form-control" size="1" name="dag">
                        <option value="Mo">Maandag</option>
                        <option value="Di">Dinsdag</option>
                        <option value="Wo">Woensdag</option>
                        <option value="Do">Donderdag</option>
                        <option value="Vr">Vrijdag</option>
                        <option value="Za">Zaterdag</option>
                        <option value="Zo">Zondag</option>
                    </select>
                    <select id="dagdeel" class="form-control" size="1" name="dagdeel">
                        <option value="Ochtend">Ochtend</option>
                        <option value="Middag">Middag</option>
                        <option value="Avond">Avond</option>
                    </select>
                    <br/>
                    <input type="submit" class="btn btn-success" value="Aanpassen" name="toevoegen"/>
                }
            </div>
        </div>

        //vaardigheden
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Vaardigheden</h3>
            </div>
            <div class="panel-body">
                @if (volunteer.Skills != null)
                {
                    <div class="list-group">
                        
                        @foreach (Skill s in volunteer.Skills)
                        {
                            <a class="list-group-item">
                                @s.Description
                            </a>
                        }

                        @if (Session["ErrorMsg"] != null)
                        {
                            <a class="list-group-item active">
                                @Session["ErrorMsg"].ToString()
                            </a>
                        }
                    </div>
                    
                }
                
                @using (Html.BeginForm("AddSKill", "Profile"))
                {
                    
                    ViewModel viewModel = new ViewModel();
                    <select id="skill" class="form-control" size="1" name="skill">
                        @foreach (Skill skill in viewModel.SkillList)
                        {
                            <option value="@skill.Description">@skill.Description</option>
                        }
                    </select>
                    <br/>
                    <input type="submit" class="btn btn-success" value="Toevoegen" name="toevoegen" />
                }
                <br />
            </div>
        </div>
      }

}
